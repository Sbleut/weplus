{% extends "layout/layout.html.twig" %}

{% block title %}Tous les admins
{% endblock %}

{% block css %}
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous"/>
	<link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">
	{{ parent() }}
{% endblock %}

{% block body %}
	<div style="container">

		<a href="{{ path('create-admin') }}" class="btn btn-success">
			<i class="fas fa-plus mr-4"></i>Créer un compte administrateur</a>

		<table id="table">
			<thead>
				<tr>
					<th>ID</th>
					<th>email</th>
			</thead>
			<tbody>
				{% for a in admins %}
					<tr>
						<td>{{ a.id }}</td>
						<td>{{ a.email }}</td>

						<td>
							<a href="{{ path('delete-admin', {'id': a.id}) }}" title="Supprimer ce comtpe" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr ?')">
								<i class="fas fa-trash"></i>
							</a>
							<a href="{{ path('edit-admin', {'id': a.id}) }}" title="Modifier ce compte" class="btn btn-primary">
								<i class="fas fa-edit"></i>
							</a>
						</td>			
						
					</tr>
				{% else %}
					<tr>Il n'y a aucun admin à afficher.</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('create-admin') }}" class="btn btn-success">
			<i class="fas fa-plus mr-4"></i>Créer un compte admin</a>

	</div>
{% endblock %}


{% block js %}
	{{ parent() }}
	<script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
	<script>
		$(document).ready(function () {
		$('#table').DataTable();
		});
	</script>
{% endblock %}
