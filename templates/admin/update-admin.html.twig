{% extends 'layout/layout.html.twig' %}

{% block title %}Modifier un administrateur
{% endblock %}

{% block body %}

	<h1>Admin</h1>

	{{ form_start(form, {'action': path('edit-admin', {'id': admin.id}) }) }}

	<div class="container">
		
		{{form_row(form.email, {'label': 'Email de l\'admin'})}}
		{{form_row(form.password, {'label': 'Mot de passe'})}}
		

		{{form_row(form.submit, {'label': 'Modifier l\'admin'})}}


	</div>
	{{ form_end(form) }}
    
{% endblock %}
